
<h1>Listing Books</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Price</th>
    <th>Photo</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.category %></td>
        <td><%= book.price %></td>
        <td><%= book.photo %></td>
        <td><%= book.user %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>